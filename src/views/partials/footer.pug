include ../mixins/logo.pug

footer(class="bg-purple-800 shadow")
  div(class="w-full max-w-screen-xl mx-auto p-4 md:py-8")
    div(class="sm:flex sm:items-center sm:justify-between")
      +logo()
      ul(class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400")
        li
          a(href="/about" class="nav-text-style me-4 md:me-6") About
        li
          a(href="/policy" class="nav-text-style me-4 md:me-6") Privacy Policy
        li
          a(href="/liscense" class="nav-text-style me-4 md:me-6") Licensing
        li
          a(href="#" class="nav-text-style") Contact
    hr(class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8")
    div(class="flex flex-col sm:flex-row sm:items-center sm:justify-between")
      form(action='/email' method='get' class="flex items-center space-x-3 mb-4 sm:mb-0")
        input(type="email" name='email' placeholder="Enter your email address" class="p-2 rounded-lg border border-gray-300")
        button(type="submit" class="p-2 bg-blue-500 text-white rounded-lg") Subscribe
      span(class="block text-sm text-white sm:text-center")
        | &copy; #{new Date().getFullYear()} 
        a(href="/" class="nav-text-style text-white") Node4U
        |. All Rights Reserved.
