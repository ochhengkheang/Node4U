mixin searchCategory(placeholder, categoryQuery, categories)
    form(id="search-form" action="/search" method="get" class="flex flex-wrap items-center space-y-3 md:space-y-0 mx-auto md:mx-0")
        label(for="simple-search" class="sr-only") Search

        //- Category and Search Container
        div(class="flex flex-grow space-x-3 w-full md:w-auto")
            //- Category Dropdown
            div(class="w-1/4 md:w-1/6")
                //- Previous Category
                select(id = "previous-category-dropdown" class='hidden')
                    option(value='') Select Category
                    each category in categories
                        option(value=category.id selected = categoryQuery === category.id) #{category.name}

                //- Current Category
                select(name="category" id = "category-dropdown"
                    class="truncate py-3 pl-3 w-full bg-gray-50 border border-gray-300 text-gray-900 text-md focus:ring-blue-500 focus:border-blue-500 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500")
                    option(value='') Select Category
                    each category in categories
                        option(value=category.id selected = categoryQuery === category.id) #{category.name}

            //- Previous search
            input(type="text" id="previous-search" class='hidden' value = nameQuery)

            //- Current Search textfield
            div(class="relative w-3/4 md:w-5/6")
                input(type="text" id="simple-search" name="query" value = nameQuery
                    class="truncate w-full ps-10 py-3 pl-3 pr-16 bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder=placeholder)
                div(class="absolute right-0 top-0 mt-2 mr-11")
                    svg(class="absolute left-3 w-6 h-6 text-gray-400", fill="currentColor", viewBox="0 0 20 20", xmlns="http://www.w3.org/2000/svg")
                        path(fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1111.196 4.5l4.451 4.451a1 1 0 01-1.414 1.414l-4.451-4.451A6 6 0 012 8z" clip-rule="evenodd")

        //- Find Button
        div(class="w-full md:w-auto flex justify-start md:justify-end")
            button(type="submit"
                class="w-full md:w-auto py-3 px-8 ms-0 md:ms-2 text-sm font-semibold text-white bg-blue-700 rounded-2xl border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800")
                p Find
                span(class="sr-only") Search
